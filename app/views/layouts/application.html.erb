<!DOCTYPE html>
<html>
  <head>
    <title>TandaChalRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

        <h1><a href="<%= home_path %>"> Adnat</a></h1>
          <div>

        <% if user_signed_in?%>

            <h3><%= link_to "Logout", destroy_user_session_path, method: :delete %></h3>


            <h3><%= link_to "Account Settings", edit_user_registration_path %></h3>


        <% else%>

            

            <h3><%= link_to 'Login', new_user_session_path %></h3>


            <h3><%= link_to 'Register', new_user_registration_path %></h3>

        <% end %>
      </div>

    <h3 style="color: green"><%= notice %></h3>
    <h3 style="color: red"><%= alert %></h3>

    <% if user_signed_in?%>
      <p>Logged in as <%= current_user.name %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
